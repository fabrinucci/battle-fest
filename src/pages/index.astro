            alt="Ampeter"
            fetchpriority="low"
          />
        </div>
      </section>

      <!-- Event info -->
      <section
        id="info"
        class="block bottom-16 z-50 lg:absolute lg:left-1/2 lg:-translate-x-1/2"
      >
        <div class="flex flex-col">
          <div class="px-5 pt-4 pb-2 bg-white text-black text-center">
            <h2 class="font-boxing text-6xl sm:text-7xl">1 de JULIO</h2>
