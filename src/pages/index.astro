          <div class="px-5 pt-2 pb-1 bg-black text-white text-center">
            <a
              class="font-boxing text-[46px] hover:contrast-150 hover:scale-105 transition inline-block"
              href="https://twitch.tv/ibai"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="text-white">twitch.tv/</span><span
                class="text-yellow-300">ibai</span
              >
            </a>
          </div>
          <div class="px-5 pt-2 pb-1 bg-blue-800 text-white text-center">
            <a
              class="hover:contrast-150 hover:scale-105 transition font-boxing text-4xl inline-block"
              href="https://twitch.tv/ibai"
              target="_blank"
              rel="noopener noreferrer">Comprar Entradas</a
            >
          </div>
        </div>
      </section>

      <section class="p-5 py-20">
        <div class="grid grid-cols-2 max-w-6xl gap-6 mx-auto w-full">
          <a
            class="col-span-2 lg:col-span-1 w-full rounded hover:scale-[1.03] transition"
            href="https://cloud.e.alsa.com/veladaIII?utm_source=c%C3%B3mo_llegar&utm_medium=web&utm_campaign=2023_07_lavelada&utm_content=abr-jul"
